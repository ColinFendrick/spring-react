{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      "tab"
    ],
    "no-trailing-spaces": "error",
    "no-console": "off",
    "object-curly-spacing": [
      "error",
      "always",
      {
        "arraysInObjects": false,
        "objectsInObjects": false
      }
    ],
    "no-unused-vars": "off",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-undef": "error",
    "comma-dangle": ["error", "never"],
    "quotes": [2, "single", {
      "avoidEscape": true
    }],
    "jsx-quotes": [2, "prefer-single"],
    "semi": [
      "error",
      "always"
    ],
    "eol-last": ["error", "always"],
    "space-infix-ops": [
      "error",
      {
        "int32Hint": false
      }
    ]
  }
}
